<div class="post">
  <h3> = 編集はこちらから = </h3>
<%= form_with model: @post, local: true do |f| %>
  <div class="content-table">
    <span>件名：</span><%= f.text_field :title, class: "content-title" %>
    <%= f.text_area :content, placeholder: "内容を入力してください", class: "content-form"%>
  </div>
  <%= f.file_field :image %>
  <%= f.submit "投稿" %>
<% end %>
</div>